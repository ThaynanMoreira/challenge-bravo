{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "prefer-const": "error",
        "prefer-arrow-callback": "error",
        "camelcase": "error",
        "eqeqeq": "error",
        "max-len": [
            "error",
            100
        ],
        "new-cap": "error",
        "no-undef-init": "error",
        "no-unused-labels": "error",
        "no-eq-null": "error"
    }
}